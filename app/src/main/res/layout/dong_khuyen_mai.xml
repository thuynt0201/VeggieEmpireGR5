<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imagekhuyenmai"
        android:padding="10dp"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txttenkhuyenmai"
        android:textSize="17sp"
        android:text="Tên"
        android:layout_toRightOf="@id/imagekhuyenmai"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/txtmotakhuyenmai"
        android:layout_toRightOf="@id/imagekhuyenmai"
        android:layout_below="@id/txttenkhuyenmai"
        android:text="Mo ta"
        android:textColor="#8E8686"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtthoigiankhuyenmai"
        android:layout_toRightOf="@id/imagekhuyenmai"
        android:layout_below="@id/txtmotakhuyenmai"
        android:text="Thời gian"
        android:textColor="#8E8686"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>