<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditInfAcountActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên người dùng"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/nunitosans_semibold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phùng Nguyễn Kim Nguyên"
                android:layout_margin="10dp"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosans_semibold"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện thoại"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/nunitosans_semibold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="0947472002"
                android:layout_margin="10dp"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="#000000"
                android:inputType="number"
                android:fontFamily="@font/nunitosans_semibold"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email xác nhận hóa đơn"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/nunitosans_semibold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="nguyenpnk20411c@st.uel.edu.vn"
                android:layout_margin="10dp"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="#000000"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/nunitosans_semibold"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/nunitosans_semibold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">
            <EditText
                android:id="@+id/txt_Ngaysinh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="02/01/2002"
                android:layout_margin="10dp"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="#000000"
                android:inputType="date"
                android:fontFamily="@font/nunitosans_semibold"
                android:drawableLeft="@drawable/ic_baseline_today_24"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:onClick="push"
            android:id="@+id/btn_Luuthongtin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Lưu thông tin"
            android:fontFamily="@font/nunitosans_bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="15dp"
            android:background="#FFD705"/>
    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>