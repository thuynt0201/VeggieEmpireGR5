<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InforOrderActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="#F8ECAF"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:text="Thông tin khách hàng"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/line" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_Name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Nguyễn Thu Thùy"
                android:textSize="16sp"
                android:fontFamily="@font/nunitosans_regular"
                android:background="@drawable/duongvienbotron"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:drawablePadding="12dp"
                android:layout_marginBottom="20dp">
            </EditText>

            <EditText
                android:id="@+id/edt_Phone"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="0384587506"
                android:textSize="16sp"
                android:fontFamily="@font/nunitosans_regular"
                android:background="@drawable/duongvienbotron"
                android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
                android:drawablePadding="12dp"
                android:inputType="number"
                android:layout_marginBottom="20dp">
            </EditText>

            <EditText
                android:id="@+id/edt_Email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="thuthuycp44@gmail.com"
                android:textSize="16sp"
                android:fontFamily="@font/nunitosans_regular"
                android:background="@drawable/duongvienbotron"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="12dp"
                android:layout_marginBottom="20dp"
                android:inputType="textEmailAddress">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="#F8ECAF"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn muốn nhận hàng vào lúc nào?"
                android:textSize="18sp"
                android:fontFamily="@font/nunitosans_bold"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_baseline_more_time_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radg_Nhanhang">
                <RadioButton
                    android:id="@+id/rad_Giaohangtannoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giao hàng tận nơi"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rad_Muamangve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mua mang về"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_Day"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/duongvienbotron"
                        android:drawableLeft="@drawable/ic_baseline_today_24"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="Chọn ngày"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_Time"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/duongvienbotron"
                        android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/nunitosans_regular"
                        android:hint="Chọn giờ"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="#F8ECAF"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ nhận hàng"
                android:textSize="18sp"
                android:fontFamily="@font/nunitosans_bold"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/txt_Address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:hint="Chung cư Tân Hương, 118 Tân Hương, Phường Tân Quý, Quận Tân Phú, TP Hồ Chính Minh"
                android:textSize="16sp"
                android:fontFamily="@font/nunitosans_regular"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                />
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8ECAF"
            android:padding="15dp"
            android:layout_margin="15dp">
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Salad khoai tây (x1)"
                    android:fontFamily="@font/nunitosans_semibold"/>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="89.000"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:gravity="end"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Bánh mì rau cũ (x2)"
                    android:fontFamily="@font/nunitosans_semibold"/>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="118.000"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:gravity="end"/>
            </TableRow>
            <TableRow android:layout_marginBottom="40dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Soup bí ngô"
                    android:fontFamily="@font/nunitosans_semibold"/>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="69.000"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:gravity="end"/>
            </TableRow>

            <TableRow android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Tổng"
                    android:textColor="#000000"
                    android:fontFamily="@font/nunitosans_semibold"/>
                <TextView
                    android:id="@+id/txt_Tong"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="267.000"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:gravity="end"/>
            </TableRow>
            <TableRow android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Phí giao hàng"
                    android:textColor="#000000"
                    android:fontFamily="@font/nunitosans_semibold"/>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="20.000"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:gravity="end"/>
            </TableRow>
            <TableRow android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Giảm giá"
                    android:textColor="#000000"
                    android:fontFamily="@font/nunitosans_semibold" />
                <TextView
                    android:id="@+id/txt_Giamgia"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="-20.000"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:gravity="end"/>
            </TableRow>
            <ImageView
                android:src="@drawable/line3"/>
            <TableRow
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="TỔNG THANH TOÁN"
                    android:textColor="#000000"
                    android:fontFamily="@font/nunitosans_bold"/>
                <TextView
                    android:id="@+id/txt_TongThanhToan"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="267.000"
                    android:textColor="#000000"
                    android:fontFamily="@font/nunitosans_bold"
                    android:gravity="end"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="#F8ECAF"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textSize="18sp"
                android:fontFamily="@font/nunitosans_bold"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_baseline_more_time_24"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radg_PTthanhtoan">
                <RadioButton
                    android:id="@+id/rad_ViVeggiePay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ví VeggiePay"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"

                    android:drawableEnd="@drawable/ic_baseline_account_balance_wallet_24"/>
                <RadioButton
                    android:id="@+id/rad_TienMat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền mặt"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:drawableEnd="@drawable/ic_baseline_money_24"/>
            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/btn_OrderNow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ĐẶT HÀNG NGAY"
            android:fontFamily="@font/nunitosans_bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="15dp"
            android:background="#FFD705"/>
    </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>