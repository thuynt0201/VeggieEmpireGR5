<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KetQuaRutActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bg_bogoc"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giao dịch thành công"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/txt_RutSuccess1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100.000đ"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/dotted"
            android:layerType="software" />
        <TextView
            android:id="@+id/txt_RutSuccess2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đã rút thành công 100.000đ từ ví VeggiePay về tài khoản ngân hànng"
            android:textSize="11sp"
            android:textColor="#000000"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:background="#ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian giao dịch"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9:40 - 19/10/2022"
                android:textSize="13sp"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch vụ"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/txt_DichVu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rút tiền vào ví"
                android:textSize="13sp"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>