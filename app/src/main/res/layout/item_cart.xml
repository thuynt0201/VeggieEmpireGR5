<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">
        <ImageView
            android:id="@+id/imv_DishesCart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logocart"
            android:gravity="center"
            android:background="#FFD705"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#CCF8ECAF"
            android:orientation="vertical"
            android:layout_marginLeft="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="2dp">
                    <TextView
                        android:id="@+id/txt_NameCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nunitosans_semibold"/>
                    <TextView
                        android:id="@+id/txt_PriceCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="12sp"
                        android:textColor="#E6000000"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nunitosans_light"/>
                </LinearLayout>

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/imv_DeteleCart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/delete_cart" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/imgbtn_minus"
                    android:src="@drawable/minus"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/txt_NumberIncart"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/nunitosans_extrabold"/>

                <ImageView
                    android:id="@+id/imgbtn_plus"
                    android:src="@drawable/plusicon"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/txt_Total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingRight="10dp"
                    android:gravity="end"
                    android:fontFamily="@font/nunitosans_semibold"/>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>





</LinearLayout>