<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/imv_Dishes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dau_hu_la_lot"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_weight="8"
        android:layout_width="200dp"
        android:layout_height="95dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/imv_Dishes"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/txt_NameMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/nunitosans_extrabold"/>
        <TextView
            android:id="@+id/txt_DesMenu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Description"
            android:textSize="12sp"
            android:fontFamily="@font/nunitosans_regular"/>
        <TextView
            android:id="@+id/txt_PriceMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="14sp"
            android:textColor="#E6000000"
            android:fontFamily="@font/nunitosans_light"/>
    </LinearLayout>

    <ImageView
        android:layout_weight="2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/plus"
        android:layout_marginTop="65dp" />

</LinearLayout>