<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_conner_16"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:text="Thanh Toán"
    android:textColor="#000000"
    android:gravity="center"
    android:background="@drawable/bg_white_conner_16_topleft_topright"
    android:textSize="16dp"
    android:fontFamily="@font/nunitosans_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Nhập mật khẩu Ví VeggiePay của bạn"
            android:fontFamily="@font/nunitosans_regular"/>
        <EditText
            android:id="@+id/edt_InputOTP"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_white_conner_10_boder_gray"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:hint="Mật khẩu...."
            android:inputType="numberPassword"
            android:textSize="18sp"
            android:fontFamily="@font/nunitosans_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <Button
                android:id="@+id/btn_Huythanhtoan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy thanh toán"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:textColor="#C6000000"
                android:background="@drawable/bg_gray_conner_10"
                android:fontFamily="@font/nunitosans_bold"/>
            <Button
                android:id="@+id/btn_Xacnhan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xác nhận"
                android:textSize="14sp"
                android:textColor="#000000"
                android:background="@drawable/bg_yellow_conner_10"
                android:fontFamily="@font/nunitosans_bold"/>




        </LinearLayout>


    </LinearLayout>




</LinearLayout>