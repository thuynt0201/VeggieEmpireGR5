<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/imv_DishesDetail"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dau_hu_la_lot"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_NameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosans_extrabold"/>
            <TextView
                android:id="@+id/txt_Des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9,8k đã bán  |  3k lượt thích"
                android:textSize="14sp"
                android:fontFamily="@font/nunitosans_regular"/>
        </LinearLayout>


        <TextView
            android:id="@+id/txt_PriceDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="18sp"
            android:textColor="#FEA905"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="end"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/imgbtn_minustocart"
            android:src="@drawable/minus"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/txt_NumberDetail"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/nunitosans_extrabold"/>

        <ImageView
            android:id="@+id/imgbtn_plustocart"
            android:src="@drawable/plusicon"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_AddDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm vào giỏ hàng"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:backgroundTint="#FEA905"
        android:fontFamily="@font/nunitosans_bold"/>
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đánh giá"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunitosans_bold"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/imv_User"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/user" />
        <TextView
            android:id="@+id/txt_User"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nguyễn Thu Thùy"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/nunitosans_semibold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_rate_24" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_rate_24" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_rate_24" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_rate_24" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Món ngon, ăn chay mà như ăn mặn, cho tiệm 5 sao..."
        android:layout_marginLeft="30dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunitosans_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/user" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Leader Phùng"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/nunitosans_semibold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_rate_24" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dở, cho mèo mèo không thèm ăn..."
        android:layout_marginLeft="30dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunitosans_regular"/>
    </LinearLayout>
</ScrollView>