<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpCenter"
    android:orientation="vertical"
    android:background="#F6F4E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFD705"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trung tâm hỗ trợ"
            android:fontFamily="@font/nunitosans_bold"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:text="Nhập từ khoá hoặc nội dung cần tìm"
            android:fontFamily="@font/nunitosans_light"
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="84dp"
                android:layout_height="78dp"
                android:background="@drawable/bg_hepcenter"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_supervised_user_circle_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_light"
                    android:text="Tài khoản"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="84dp"
                android:layout_height="78dp"
                android:background="@drawable/bg_hepcenter"
                android:orientation="vertical"
                android:layout_marginLeft="60dp">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_baseline_payment_24"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_light"
                    android:text="Đơn hàng"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="84dp"
                android:layout_height="78dp"
                android:background="@drawable/bg_hepcenter"
                android:orientation="vertical"
                android:layout_marginLeft="60dp">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_baseline_curtains_24"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_light"
                    android:text="Bảo hiểm"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="84dp"
                android:layout_height="78dp"
                android:background="@drawable/bg_hepcenter"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_vanchuyen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_light"
                    android:text="Vận chuyển"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="84dp"
                android:layout_height="78dp"
                android:background="@drawable/bg_hepcenter"
                android:orientation="vertical"
                android:layout_marginLeft="60dp">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="29dp"
                    android:src="@drawable/ic_baseline_info_24"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_light"
                    android:text="Khác"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
            </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu hỏi thường gặp"
            android:fontFamily="@font/nunitosans_bold"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Thành viên mới] Điều kiện bảo hiểm và hoàn tiền của Veggie Empỉre"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunitosans_regular"
            android:padding="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Thành viên mới] Làm sao để mua hàng/ đặt hàng trên ứng dụng Veggie Empire?"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunitosans_regular"
            android:padding="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Đơn hàng] Cách theo dõi tình trạng vận chuyển của đơn hàng?"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunitosans_regular"
            android:padding="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Đơn hàng] Tôi muốn huỷ đơn hàng"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunitosans_regular"
            android:padding="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Tài khoản] Tại sao tôi không nhận được mã xác thực  OTP?"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunitosans_regular"
            android:padding="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Đơn hàng] Tôi phải làm gì nếu đơn hàng bị cập nhật sai trạng thái/ chưa nhận được hàng?"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunitosans_regular"
            android:padding="3dp"/>

    </LinearLayout>

</LinearLayout>
